<p id="notice"><%= notice %></p>

<h1>Score Boards</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Score</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @score_boards.each do |score_board| %>
      <tr>
        <td><%= score_board.user_id %></td>
        <td><%= score_board.score_id %></td>
        <td><%= link_to 'Show', score_board %></td>
        <td><%= link_to 'Edit', edit_score_board_path(score_board) %></td>
        <td><%= link_to 'Destroy', score_board, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Score Board', new_score_board_path %>
